      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GSB Manager"
    },
    "portable": {
      "artifactName": "GSB_Manager_Portable.exe"
    }
  },
  "keywords": [
    "infrastructure",
    "server",
    "manager",
    "gsb"
  ],
  "author": "GSB",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
